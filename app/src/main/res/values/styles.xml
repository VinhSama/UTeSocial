<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.UTeSocial.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/Widget.UTeSocial.BottomNavigationView.ActiveIndicator</item>
        <item name="itemIconTint">@color/color_act_main_bnv_icon_selected</item>
        <item name="itemTextAppearanceActive">@style/Widget.UTeSocial.BottomNavigationView.ItemText.Active</item>
        <item name="itemTextColor">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="Widget.UTeSocial.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="Widget.UTeSocial.BottomNavigationView.ItemText.Active" parent="">
        <item name="android:textSize">@dimen/act_main_bottom_bnv_item_text</item>
    </style>

    <style name="Widget.UTeSocial.FloatingActionButton.Main" parent="Widget.Material3.FloatingActionButton.Surface">
        <item name="android:foreground">@drawable/for_fab_create</item>
    </style>

    <style name="CircleShape">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogInputUsername">
        <item name="android:windowEnterAnimation">@anim/anim_enter_dialog_username_show</item>
        <item name="android:windowExitAnimation">@anim/anim_enter_dialog_username_hide</item>
    </style>

</resources>