<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Material3.CardView.Outlined"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:strokeWidth="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:contentPaddingLeft="@dimen/_4sdp"
    app:contentPaddingTop="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imv_avatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:shapeAppearanceOverlay="@style/CircleShape"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ico_default_profile"
            app:layout_constraintWidth_percent="0.14"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            />
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/imv_avatar"
            app:layout_constraintEnd_toEndOf="@id/imv_avatar"
            app:layout_constraintTop_toTopOf="@id/imv_avatar"
            app:layout_constraintBottom_toBottomOf="@id/imv_avatar"
            app:shimmer_auto_start="true"
            app:shimmer_duration="800"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shapeAppearanceOverlay="@style/CircleShape"
                android:src="@drawable/pla_oval"
                android:scaleType="centerCrop"
                />
        </com.facebook.shimmer.ShimmerFrameLayout>
        <LinearLayout
            android:id="@+id/view_group_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/imv_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imv_avatar"
            android:background="@drawable/pla_rectangle_14"
            android:padding="@dimen/_10sdp"
            android:backgroundTint="?attr/colorSurfaceContainerHigh"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txv_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textSize="@dimen/_13ssp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txv_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="@dimen/_12ssp"
                />
        </LinearLayout>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imv_image_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/view_group_comment"
            app:layout_constraintTop_toBottomOf="@id/view_group_comment"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_for_test"
            app:layout_constraintHeight_max="@dimen/_250sdp"
            app:shapeAppearanceOverlay="@style/RectangleShape"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txv_created_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/view_group_comment"
            app:layout_constraintTop_toBottomOf="@id/imv_image_content"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceCaption"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>