<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_placeholder_interact"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginTop="6dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <RelativeLayout
        android:id="@+id/relative_layout_like"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/relative_layout_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_like"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pla_rectangle_5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/relative_layout_like"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_comment"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pla_rectangle_5" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>