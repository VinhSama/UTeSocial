<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    android:background="@drawable/bac_it_search"
    android:padding="16dp">

    <View
        android:id="@+id/view_avatar"
        android:layout_width="@dimen/ite_fra_request_iv_avatar_width"
        android:layout_height="90dp"
        android:background="@drawable/pla_oval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@id/linear_layout_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linear_layout_content"
        android:layout_width="@dimen/ite_fra_request_ll_content_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ite_fra_request_ll_content_margin_start"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_avatar"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_full_name"
            android:layout_width="match_parent"
            android:background="@drawable/pla_rectangle_5"
            android:layout_height="18dp" />

        <View
            android:id="@+id/view_username"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/pla_rectangle_5" />

        <View
            android:id="@+id/view_role"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/pla_rectangle_5" />

        <View
            android:id="@+id/view_interact"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/pla_rectangle_5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>