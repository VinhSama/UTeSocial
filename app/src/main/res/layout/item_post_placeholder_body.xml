<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_placeholder_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="24dp">

    <View
        android:id="@+id/view_content_1"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@drawable/pla_rectangle_5"
        app:layout_constraintBottom_toTopOf="@id/view_content_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_content_2"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/pla_rectangle_5"
        app:layout_constraintBottom_toTopOf="@id/view_content_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_content_1" />

    <View
        android:id="@+id/view_content_3"
        android:layout_width="175dp"
        android:layout_height="14dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/pla_rectangle_5"
        app:layout_constraintBottom_toTopOf="@id/view_content_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_content_2" />

    <View
        android:id="@+id/view_content_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/pla_rectangle_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_content_3" />

</androidx.constraintlayout.widget.ConstraintLayout>