<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="unRead"
            type="Boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notify_cl_item_height"
        android:background="@{unRead}"
        android:paddingHorizontal="@dimen/notify_cl_item_padding_horizontal"
        android:paddingVertical="@dimen/notify_cl_item_padding_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_avatar"
            android:layout_width="@dimen/notify_iv_avatar_width"
            android:layout_height="@dimen/notify_iv_avatar_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toStartOf="@id/linear_layout_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ico_circle_user_duotone" />

        <LinearLayout
            android:id="@+id/linear_layout_content"
            android:layout_width="@dimen/notify_ll_content_size"
            android:layout_height="@dimen/notify_ll_content_size"
            android:layout_marginHorizontal="@dimen/notify_ll_content_margin_horizontal"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_menu"
            app:layout_constraintStart_toEndOf="@id/image_view_avatar"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/notify_tv_content_margin_bottom"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="klfjgbfjdsgsdnmgkudfnsisgdsfsdfsdijsdfgbnfdsjgbdhfsnjgdhfnjsfdgndsfnddfdfdfdfdfdfdfdf"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/notify_tv_content" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="16dofjdsfbsdhfsudfbsdhfdsbkfjdsbnjfsdnfjsdfksdhfsjdfhsdjfhsdkjfsdfsd"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="@dimen/notify_tv_date" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_menu"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="@dimen/notify_btn_menu_width"
            android:layout_height="@dimen/notify_btn_menu_height"
            android:background="@android:color/transparent"
            android:contentDescription="@string/des_btn_menu_notify"
            app:icon="@drawable/ico_ellipsis_regular"
            app:iconGravity="textStart"
            app:iconTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/linear_layout_content"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>